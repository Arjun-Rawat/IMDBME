<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('components/header'); %>
    <title>Task</title>
  </head>

  <body>
    <div class="wrapper mb-40">
      <%-include('components/navbar'); %>

      <main>
        <div class="container">
          <h2 class="bold center mt-40 mb-40 color-gray font-34"><%= movie.name %></h2>
          <div class="wrapper-movies single-page-movie">
            <div class="movie_tile">
              <div class="movie-poster" style="background-image: url('/assets/images/<%= Math.floor(Math.random() * 5)    %>.jpg')"></div>
              <div class="movie-details">
                <div class="vote_unvote">
                  <div class="vote" data-movie-id="<%= movie._id %> ">
                    <span class="vote-count"><%= movie.upvotes > 0? movie.upvotes:"" %></span><span class="material-symbols-outlined pdl-5me"> thumb_up </span>
                  </div>
                  <div class="unvote ml-auto" data-movie-id="<%= movie._id %>">
                    <span class="vote-count"><%= movie.downvotes>0? movie.downvotes:"" %></span><span class="material-symbols-outlined pdl-5me"> thumb_down </span>
                  </div>
                </div>
                <div class="movie-name">Name: <%= movie.name%></div>
                <div class="movie-genre">Genre: <%= movie.genre%></div>
                <p class="movie-descitptions"><small><%= movie.details%></small></p>
                <div class="relese-date">
                  <span class="title bold">Relese Date:</span> <span class="badge rounded-pill bg-light text-dark"><%= moment(movie.release_date).format("dddd MMMM Do YYYY ") %></span>
                </div>

                <div class="reviews">
                  <h2><span class="material-symbols-outlined"> star </span> &nbsp;&nbsp;Reviews</h2>
                  <ol type="1">
                    <% movie.reviews.forEach(rv=>{ %>
                    <li>
                      <figure>
                        <blockquote class="blockquote">
                          <p><%= rv.title %></p>
                        </blockquote>
                        <figcaption class="blockquote-footer">Written by <cite class="bold"> <%= rv.givenBy %> </cite></figcaption>
                      </figure>
                    </li>

                    <% }) %>
                  </ol>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>

      <%-include('components/scripts'); %>
    </div>
  </body>
</html>
